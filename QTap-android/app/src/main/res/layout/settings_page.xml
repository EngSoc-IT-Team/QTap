<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cbcaca"
    android:paddingTop="@dimen/button_space"
    android:id="@+id/tableLayout">


    <TableRow>

    <TextView
        android:id="@+id/netID"
        android:layout_width="162dp"
        android:layout_marginTop="@dimen/button_space"
        android:layout_marginLeft="@dimen/button_space"
        android:background="@color/colorPrimary"
        android:text="@string/netid"
        android:textSize="18sp"
        android:layout_height="162dp"
        android:paddingTop="@dimen/button_space"
        android:textColor="@android:color/white"
        android:textAlignment="center"
/>

    <TextView
        android:id="@+id/login_date"
        android:layout_width="162dp"
        android:layout_height="162dp"
        android:layout_marginTop="@dimen/button_space"
        android:background="@color/colorPrimary"
        android:paddingTop="10dp"
        android:paddingLeft="@dimen/button_space"
        android:text="Date"
        android:textSize="18sp"
        android:layout_marginLeft="11dp"
        android:textColor="@android:color/white"
        android:textAlignment="center"
/>

    </TableRow>



    <Button
        android:id="@+id/logout"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/button_space"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorAccent"
        android:shadowColor="@android:color/background_light"
        android:text="@string/logout"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/button_space"
        tools:gravity="center" />



</TableLayout>